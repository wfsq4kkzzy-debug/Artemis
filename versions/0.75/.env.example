# Příklad konfigurací pro vývojové prostředí
# Zkopírujte na .env a upravte podle potřeby

# Flask nastavení
FLASK_ENV=development

# Anthropic API klíč pro AI asistenta
# Získejte na https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
FLASK_APP=app.py
FLASK_DEBUG=1

# Bezpečnost
SECRET_KEY=dev-secret-key-zmenit-na-produkcni

# Databáze
# SQLALCHEMY_DATABASE_URI=sqlite:///library_budget.db
# Nebo pro PostgreSQL:
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost/library_budget

# Produkční nastavení (pro deployment)
# FLASK_ENV=production
# SECRET_KEY=<vygenerovaný-tajný-klíč>
# SQLALCHEMY_TRACK_MODIFICATIONS=False

# Email notifikace (volitelné)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=1
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
